<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Account Invoice FORM view -->
        <record model="ir.ui.view" id="bit_account_invoice_form_view">
            <field name="name">bit account_invoice_form_view</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
              <xpath expr="//group//group//field[@name='name']" position="after">
                <field name="month" attrs="{'invisible': True}"/>               
              </xpath>
            </field>
        </record>
    </data>
</odoo>
